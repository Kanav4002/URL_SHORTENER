<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>  
    <h1>URL Shortener</h1>
    <form class="url-form" action="/shorten" method="POST">
        <input type="url" class="url-input" name="originalUrl" placeholder="Enter URL here" required>
        <button type="submit">Shorten</button>
    </form>

    <% if (shortUrl) { %>
      <div class="url-container">
          <input type="text" class="short-url-input" value="<%= shortUrl %>" readonly>
          <button onclick="copyUrl()">Copy</button>
      </div>
    <% } %>

    <h2 class="url-title">Recently Shortened URLs</h2>
    <p class="url-about">Here are your shortened URLs! ðŸ˜†</p>
    <div class="url-grid">
        <% recentUrls.forEach(url => { %>
            <div class="url-card" style="background-color: #201773;">
                <p style="color: #060513;">Short: <a href="<%= url.shortUrl %>" target="_blank"><%= url.shortUrl %></a></p>
            </div>
        <% }) %>
    </div>

    <script>
        function copyToClipboard() {
            const shortUrlInput = document.getElementById('shortUrl');
            shortUrlInput.select();
            shortUrlInput.setSelectionRange(0, 99999); // For mobile support

            navigator.clipboard.writeText(shortUrlInput.value)
                .then(() => {
                    const copyMessage = document.getElementById('copyMessage');
                    copyMessage.style.display = 'inline';
                    setTimeout(() => {
                        copyMessage.style.display = 'none';
                    }, 2000);
                })
                .catch(err => {
                    alert('Failed to copy URL');
                });
        }
    </script>
</body>
</html> 